---
pagination:
  data: queryResults
  alias: result
  size: 1
layout: amp-layout.njk
#ToDo fix the lesson filename
# permalink: "{{result.lessonPaths[0].courseCode | default: 'default' }}_u{{result.lessonPaths[0].unitNumber}}la{{result.index}}.html"
permalink: "{{result.name}}{{result.lessonPath}}.html"
---

{%- if result.componentContainers %}
  {%- for section in result.componentContainers[0].sections -%}
    {% include amp-section.html section:section %}
  {%- endfor -%}
{%- else %}
  {%- for section in result.componentContainer.sections -%}
    {% include amp-section.html section:section %}
  {%- endfor -%}
{%- endif %}

